{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Director",
  "description": "A person who directs a movie",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for a director",
      "type": "integer"
    },
    "name": {
      "description": "Name of the director",
      "type": "string"
    },
    "wiki": {
      "description": "Wikipedia link to see more details about the director (URL)",
      "type": "string"
    }
  },
  "required": [
    "id",
    "name",
    "release"
  ]
}