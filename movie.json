{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Movie",
  "description": "A movie from the crawled catalog",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for a movie",
      "type": "integer"
    },
    "title": {
      "description": "Title of the movie",
      "type": "string"
    },
    "genres": {
      "description": "Genres of the movie (Genre Model)",
      "type": "array"
    },
    "duration": {
      "description": "Length of the movie in minutes",
      "type": "integer"
    },
    "keywords": {
      "description": "Specific keywords to improve search engine visibility",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "stars": {
      "description": "Artists that featured in the movie (Actor Model)",
      "type": "array"
    },
    "directors": {
      "description": "The director(s) of the movie (Director Model)",
      "type": "array"
    },
    "released": {
      "description": "Date the movie was released",
      "type": "string"
    },
    "ratings": {
      "description": "Average ratings of the movie",
      "type": "integer"
    },
    "trailer": {
      "description": "Link to preview the movie",
      "type": "string"
    },
    "showtimes": {
      "description": "All showtime information for this movie",
      "type": "array"
    },
    "country": {
      "description": "Country the movie was made (Country Model)",
      "type": "object"
    }
  },
  "required": [
    "id",
    "name",
    "release"
  ]
}
